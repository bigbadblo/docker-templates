<?xml version="1.0" encoding="utf-8"?>
<Container>
  <TemplateURL>https://raw.githubusercontent.com/bigbadblo/docker-templates/master/bigbadblo/lgtv-alexa-skill.xml</TemplateURL>
  <Beta>False</Beta>
  <Category>HomeAutomation</Category>
  <Name>lgtv-alexa-skill</Name>
  <Support>https://forums.lime-technology.com/topic/TEST/</Support>
  <Description>This skill is to create a Node.js server to act as a bridge between an LGTV running webOS and Alexa-based devices and a select set of skills to control basic functions, inputs and webOS applications.</Description>
  <Project>https://github.com/lucone83/lgtv-alexa-skill</Project>
  <Registry>https://registry.hub.docker.com/u/bigbadblo/lgtv-skill-alexa/</Registry>
  <Repository>bigbadblo/lgtv-alexa-skill</Repository>
  <Network>host</Network>
  <Privileged>false</Privileged>
  <Icon>https://raw.githubusercontent.com/bigbadblo/docker-templates/master/bigbadblo/images/webos-icon.png</Icon>  
  <Overview>To include: details regarding configuration setup for end-users.</Overview>
  <Config Name="tvMAC" Target="XX:XX:XX:XX:XX:XX" Default="" Mode="" Description="Your LGTV's MAC Address" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="tvIP" Target="xxx.xxx.xxx.xxx" Default="" Mode="" Description="Your LGTV's IP Address" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="tvNAME" Target="your_tv_name" Default="" Mode="" Description="TV" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="tvAppNAME" Target="you_tv_app_name" Default="" Mode="" Description="TV" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="UMASK" Target="UMASK" Default="000" Mode="" Description="UMASK" Type="Variable" Display="advanced-hide" Required="true" Mask="false">000</Config>
  <Config Name="User ID" Target="PUID" Default="99" Mode="" Description="PUID" Type="Variable" Display="advanced-hide" Required="true" Mask="false">99</Config>
  <Config Name="Group ID" Target="PGID" Default="100" Mode="" Description="PGID" Type="Variable" Display="advanced-hide" Required="true" Mask="false">100</Config>  
  <Config Name="AppData Config Path" Target="/config" Default="/mnt/cache/appdata/lgtv" Mode="rw" Description="Container Path: /config" Type="Path" Display="advanced-hide" Required="true" Mask="false">/mnt/cache/appdata/lgtv</Config>
